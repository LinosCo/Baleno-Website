{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd /app && pnpm install && pnpm --filter @baleno/web build"
  },
  "deploy": {
    "startCommand": "cd /app/apps/web && npx next start -p 3000",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
