{
  "name": "baleno-booking-system",
  "version": "1.0.0",
  "private": true,
  "description": "Sistema completo di gestione prenotazioni per balenosanzeno.it",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "type-check": "turbo run type-check",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@prisma/client": "5.22.0",
    "@types/node": "^20.11.0",
    "prettier": "^3.2.4",
    "prisma": "5.22.0",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
